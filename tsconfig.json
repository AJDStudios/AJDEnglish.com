{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "jsx": "react",              
      "esModuleInterop": true,     
      "allowJs": true,
      "checkJs": false,
      "outDir": "./build",
      "moduleResolution": "node",
      "skipLibCheck": true,
      "strict": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  